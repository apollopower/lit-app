<!DOCTYPE html>
<html>
  <head>
    <title>Lit</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">



    <!--  Twilio  -->
    <script src="https://media.twiliocdn.com/sdk/js/common/v0.1/twilio-common.min.js"></script>
    <script src="https://media.twiliocdn.com/sdk/js/chat/v1.0/twilio-chat.min.js"></script>
    <%= javascript_include_tag 'https://media.twiliocdn.com/sdk/rtc/js/ip-messaging/releases/0.8.1/twilio-ip-messaging.min.js' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>

  <body>



    <% if current_user %>

    <!-- Navbar START -->
    <div class="header fixed-navbar">
      <div class="header-nav fixed-top">
        <ul class="nav nav-pills" id="nav-pills">
          <li role="presentation"><a href="#"><%= link_to "Profile", usersprofile_path(id: current_user.id), class: 'navlinks' %></a></li>
          <li role="presentation"><%= link_to image_tag('lit.png'), root_path, id: 'logo' %>
          <li role="presentation"><a href="#"><%= link_to "Log Out", logout_path, class: 'navlinks'  %></a></li>
        </ul>
      </div>
    </div>

    <div class="spacer">    </div>
    <!-- Navbar END -->

    <%= yield %>

    <!-- Module for Notification -->

    <!-- Modal -->
    <div class="modal fade" id="message_notification" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"></h4>
          </div>
          <div class="modal-body">

          </div>
          <div class="modal-footer">
            <%= button_to "Chat", nil, method: :patch, class: 'btn btn-primary btn-lg chat-with' %>
            <a href="" class="btn btn-primary btn-lg chat-with-receiver"></a>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <body class="login-page">
    <%= image_tag 'lit.png', id: 'home-logo' %>
    <div class="slogan">
      <h1>Launching Ideas Together</h1>
      <br>
      <h3>Crowdsource your philanthropic and startup ideas</h3>
    </div>
    <div class="login-button">
      <a class="btn btn-lg btn-primary" id=:login-button href="/auth/facebook" role="button">Log In With Facebook</a>
    </div>
  <% end %>


  </body>
</html>
