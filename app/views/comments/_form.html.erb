    <%= form.hidden_field :idea_id, value: @idea.id %>
    <br>

      <h4>Topic:
      <%= form.select :topic, ['Choose Topic  â–¼','Problem Being Addressed','Ways to Enhance Idea', 'Implementing Idea', 'Other'], id: "topicdrop"%> </h4>


  </div>

  <div class="actions">
    <button class="btn btn-primary" type="button" name="button"><%= form.submit %></button>
  </div>
<% end %>
