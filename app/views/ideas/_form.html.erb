
<div class="center-form">
<%= form_with(model: @idea,remote: true, class:"create_idea")do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@idea.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul>
        <% @idea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="container-form">
    <h3 class="form-field"> Idea Name </h3><br>
      <%= f.text_field :title,  :size => "47" %>
  </div>


  <p>
    <div class="container-form">
      <h3 class="form-field">Summary </h3><br>
      <%= f.text_area :summary, placeholder: "Provide a brief summary of your idea.", class: 'form-box' %>
    </div>
  </p>

  <p>
    <div class="container-form">
      <h3 class="form-field">Problem</h3><br>
      <%= f.text_area :problem, placeholder: "What problem does your idea fix?", class: 'form-box' %>
    </div>
  </p>

  <p>
    <div class="container-form">
      <h3 class="form-field">Description</h3><br>
      <%= f.text_area :description, placeholder: "Provide an in-depth description of your idea.", class: 'form-box' %>
    </div>
  </p>

  <p>
    <div class="container-form">
      <h3 class="form-field">Seeking Guidance In</h3><br>
      <%= f.text_area :guidance, placeholder: "What do you need help with?", class: 'form-box' %>
    </div>
  </p>

  <div class="field">
  <div class="container-form">
    <h3 class="form-field">Add an image</h3>
    <br>
    <%= f.file_field :image, class: 'form-box' %>
  </div>
  </div>

  <p>
  <div class="container-form">
    <h3 class="form-field">Category</h3><br>
      <div class="form-box" id="catdropdown">
    <%= f.select :category,  ['Arts  â–¼','Business', 'Education',  'Finance', 'Food & Drink', 'Gaming/ Entertainment',
      'Health/Wellness', 'Legal', 'Life Science', 'Medical', 'Music', 'Navigation','News','Photo & Video',
      'Real Estate','Robotics','Security','Shopping','Social Media','Technology', 'Transportation','Travel',
      'Utilities', 'Other'] %> </p>
    </div>
  </div>

<% end %>
</div>

</div>
