<div class="ideasection">
  <h3><%= @idea.title %></h3>
  <%= image_tag(@idea.image_url().to_s) %><br><br
  <p><%= @idea.category%><p>
  <p><%= @idea.summary %><p>
  <p><%= @idea.problem %><p>
  <p><%= @idea.description %><p>
  <p><%= @idea.guidance %><p>


<h5>Submitted by <%= @idea.user.first_name if @idea.user %></h5>

<%= image_tag @idea.user.avatar_url, id: 'profile-pic' if @idea.user %>
<br>
<%= link_to "View This User's Profile", usersprofile_path(id: @idea.user.id) %><br>

<% unless current_user == @idea.user %>
</div>

  <!-- Button trigger modal -->
  <div class="container">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      <%= "Message " + @idea.user.first_name %>
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Message Request Sent to <%= @idea.user.first_name %>!</h4>
        </div>
        <!-- <div class="modal-body">
          ...
        </div> -->
        <div class="modal-footer">
          <%= button_to 'Return', idea_conversations_path(@idea), class: 'btn btn-primary btn-lg'  %>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="container">
    <h3>Leave a Comment</h3>

    <%= render 'comments/form', comment: @comment %>

      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
           <a class="navbar-brand" href="#">Sort</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
           <ul class="nav navbar-nav">
             <li class="active"><%= link_to "Problem Being Addressed", nil %></li>
             <li><%= link_to "Ways to Enhance Idea", nil %></li>
             <li><%= link_to "Implementing Idea", nil %></li>
             <li><%= link_to "Disagree With Aspect of Idea", nil %></li>
             <li><%= link_to "Other", nil %></li>

               </ul>
             </li>
           </ul>

         </div><!-- /.navbar-collapse -->
       </div><!-- /.container-fluid -->

      </nav>
      <% @comments.each do |comment| %>
        <p><%= comment.body %></p>
        <p><%= comment.topic %></p>
        <h6>Submitted by <%= comment.user.first_name %></h6>
      <% end %>
  </div>
