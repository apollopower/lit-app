<h1>Profile </h1>


	<%=current_user.name %>
	<br>
	<br>
	<%= image_tag current_user.avatar_url, id: 'profile-pic' %>

	<br>
	<br>

	<p><%= current_user.bio %></p>

	<h3>Skills and Strengths</h3>
	<h5><%= current_user.skills %></h5>

<% unless current_user.bio %>
	<%= form_tag '/userprofile' do %>

		Bio: <%= text_area_tag :bio %>
		<br>
		<br>
	<%= submit_tag "Update" %>
	<% end %>
<% end %>

<% unless current_user.skills %>
	<%= form_tag '/userprofile' do %>
		Skills: <%= text_area_tag :skills %>

		<br>
		<br>
		<%= submit_tag "Submit" %>
	<% end %>
<% end %>

<div class="profile-requests">
	<% current_user.received_conversations.each do |convo| %>
		<% if convo.verify == false %>
			<!-- Button to accept request -->
			<%= image_tag convo.author.avatar_url, id: 'sender-pic' %>
			<p><%= convo.author.first_name %> wants to talk to you about <%= convo.idea.title %>!</p>
			<%= button_to "Talk to #{convo.author.first_name}!", conversation_path(convo), method: :patch %>
		<% end %>
	<% end %>
</div>

<div class="profile-conversations">
	<% current_user.authored_conversations.each do |convo| %>
		<% if convo.verify == true %>
			<p><%= "#{convo.idea.user.first_name} wants to talk!" %></p>
			<%= button_to "Talk to #{convo.recipient.first_name}!", idea_conversation_path(convo,convo), method: :get %>
		<% end %>
	<% end %>
</div>
